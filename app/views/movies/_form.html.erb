<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_select(:release_date,:start_year => 1940,:end_year => Time.now.year + 5) %>
  </div>  
  <%= hidden_field_tag "movie[actor_ids][]", nil%>
    <% Actor.all.each do |actor| %>
    <%= check_box_tag "movie[actor_ids][]", actor.id, @movie.actor_ids.include?(actor.id) %>
    <%= actor.name %><br/>
  <% end %>
  <div class="field">
    <%= f.label :synopsis %><br>
    <%= f.text_area :synopsis %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
