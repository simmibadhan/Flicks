<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9">
      <p>
        <%= render partial: "movie_photos/movie_photos_first" %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= @movie.title %>
      </p>

      <p>
        <strong>Director:</strong>
        <%= @movie.director %>
      </p>

      <p>
        <strong>Release date:</strong>
        <%= @movie.release_date.strftime("%d %B, %Y") %>
      </p>

      <p>
        <strong>Casting:</strong>
        <%=@movie.actors.map { |f| f.name }.join ', '%>
      </p>

      <p>
        <strong>Synopsis:</strong>
        <%= @movie.synopsis %>
      </p>

      <!-- <p>
        <strong>Rating:</strong>
        <%= @movie.rating %>
      </p> -->

      <p>
        <strong>Popularity:</strong>
        <%@movie.view_count += 1 %>
        <%@movie.save%>
        <%= @movie.view_count %>
      </p>

      <ul class="nav nav-list">
        <li class="divider"></li>
      </ul>

      <div>
        <h4>Reviews (<%=@movie.reviews.count%>)</h4>
        <%= render "reviews/reviews" %>
        <%= render "reviews/form" %>
      </div>

    </div>

    <div class="span3">
      <ul class="nav nav-list">
        <li><h5><%= link_to 'Edit Movie', edit_movie_path(@movie) %></h5></li>
        <li class="divider"></li>
        <li><h5><%= link_to 'Delete Movie', @movie, method: :delete, data: { confirm: 'Are you sure?' } %> </h5></li>
        <li class="divider"></li>
        <li><h5><%= link_to @movie.title+' Photos', movie_movie_photos_path(@movie) %></h5></li>
        <li class="divider"></li>
      </ul>
      <%= render "side_nav" %> 
    </div>

  </div>   
</div>

    


